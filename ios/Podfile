# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, '16.0'
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
else
  # Use static frameworks for Firebase to support Swift bridging headers
  # Static frameworks are required for Firebase pods that contain Swift code
  use_frameworks! :linkage => :static
end

target 'TimelineApp' do
  use_modular_headers!
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Comprehensive fix for RCT-Folly compatibility with iOS SDK 26.1 and Xcode 26.1
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Set minimum iOS version (Firebase and dependencies require iOS 16.0+)
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
        # Disable user script sandboxing to fix rsync/ditto permission issues
        config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
        
        # Fix RCT-Folly specific issues
      if target.name == 'RCT-Folly'
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
          # iOS SDK 26.1 has clock_gettime and clockid_t, so we should use it
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'FOLLY_HAVE_CLOCK_GETTIME=1'
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'FOLLY_HAVE_PTHREAD_ATFORK=0'
          
          # C++ standard library settings
          config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'
          config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
          
          # Disable problematic warnings that might be treated as errors
          config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'NO'
          config.build_settings['WARNING_CFLAGS'] ||= ['$(inherited)']
          config.build_settings['WARNING_CFLAGS'] << '-Wno-deprecated-declarations'
          config.build_settings['WARNING_CFLAGS'] << '-Wno-deprecated'
          config.build_settings['WARNING_CFLAGS'] << '-Wno-error=deprecated-declarations'
          
          # Additional compiler flags for compatibility
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] ||= ['$(inherited)']
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] << '-Wno-deprecated-declarations'
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] << '-std=c++17'
        end
        
        # Apply similar fixes to all C++ targets that might have issues
        if target.name.include?('React') || target.name.include?('hermes') || target.name.include?('Folly')
          config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'
          config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
        end
        
        # Fix gRPC-C++ module map issue by ensuring proper header search paths
        if target.name == 'gRPC-C++'
          config.build_settings['HEADER_SEARCH_PATHS'] ||= ['$(inherited)']
          config.build_settings['HEADER_SEARCH_PATHS'] << '"${PODS_ROOT}/Headers/Private/gRPC-Core"'
          config.build_settings['HEADER_SEARCH_PATHS'] << '"${PODS_ROOT}/gRPC-Core/src/core"'
        end
        
        # Fix FirebaseAuth Swift bridging header issue
        # Ensure Swift bridging headers are generated and accessible to RNFBAuth
        if target.name == 'FirebaseAuth'
          config.build_settings['DEFINES_MODULE'] = 'YES'
          config.build_settings['SWIFT_INSTALL_OBJC_HEADER'] = 'YES'
          config.build_settings['SWIFT_OBJC_BRIDGING_HEADER'] = ''
          config.build_settings['SWIFT_OBJC_INTERFACE_HEADER_NAME'] = 'FirebaseAuth-Swift.h'
          # Ensure the Swift header is generated in a publicly accessible location
          config.build_settings['SWIFT_OBJC_INTERFACE_HEADER_DIR'] = '$(DERIVED_FILE_DIR)'
        end
        
        # Ensure RNFBAuth can find FirebaseAuth Swift bridging header
        # The Swift bridging header is generated during FirebaseAuth build
        if target.name == 'RNFBAuth'
          config.build_settings['HEADER_SEARCH_PATHS'] ||= ['$(inherited)']
          # Add path to where FirebaseAuth Swift header will be generated during build
          config.build_settings['HEADER_SEARCH_PATHS'] << '"$(BUILD_DIR)/$(CONFIGURATION)$(EFFECTIVE_PLATFORM_NAME)/Pods.build/$(CONFIGURATION)-$(PLATFORM_NAME)/FirebaseAuth.build/Objects-normal/$(NATIVE_ARCH_ACTUAL)"'
          config.build_settings['HEADER_SEARCH_PATHS'] << '"$(BUILD_DIR)/$(CONFIGURATION)$(EFFECTIVE_PLATFORM_NAME)/Pods.build/$(CONFIGURATION)-$(PLATFORM_NAME)/FirebaseAuth.build/DerivedSources-normal/$(NATIVE_ARCH_ACTUAL)"'
          # Ensure FirebaseAuth builds before RNFBAuth
          config.build_settings['ALWAYS_SEARCH_USER_PATHS'] = 'YES'
        end
      end
      
      # Fix Hermes script phase issues
      if target.name == 'hermes-engine'
        target.build_phases.each do |phase|
          if phase.is_a?(Xcodeproj::Project::Object::PBXShellScriptBuildPhase) && phase.name && phase.name.include?('Hermes')
            phase.always_out_of_date = true
          end
        end
      end
    end
    
    # Fix rsync sandbox permission issues for framework embedding
    # Replace rsync with ditto (more sandbox-friendly) in the frameworks script
    frameworks_script_path = File.join(installer.sandbox.root, 'Target Support Files/Pods-TimelineApp/Pods-TimelineApp-frameworks.sh')
    if File.exist?(frameworks_script_path)
      script_content = File.read(frameworks_script_path)
      # Replace rsync commands with ditto (Apple's tool, better sandbox support)
      # Replace the main rsync in install_framework
      script_content = script_content.gsub(
        /rsync --delete -av "\${RSYNC_PROTECT_TMP_FILES\[@\]}" --links --filter "- CVS\/" --filter "- \.svn\/" --filter "- \.git\/" --filter "- \.hg\/" --filter "- Headers" --filter "- PrivateHeaders" --filter "- Modules" "\${source}" "\${destination}"/,
        'ditto "${source}" "${destination}/$(basename "${source}")"'
      )
      # Also replace other rsync calls that might cause issues
      script_content = script_content.gsub(
        /rsync -auv "\${SWIFT_STDLIB_PATH}\/\${lib}" "\${destination}"/,
        'ditto "${SWIFT_STDLIB_PATH}/${lib}" "${destination}/${lib}"'
      )
      File.write(frameworks_script_path, script_content)
      puts "✓ Fixed rsync sandbox issues in frameworks script (using ditto)"
    end
    
    # Fix gRPC-Core module map location issue
    # The build system expects the module map at Headers/Private/grpc/gRPC-Core.modulemap
    # but it's actually generated at Target Support Files/gRPC-Core/gRPC-Core.modulemap
    pods_root = installer.sandbox.root
    gRPC_modulemap_source = File.join(pods_root, 'Target Support Files', 'gRPC-Core', 'gRPC-Core.modulemap')
    grpc_headers_dir = File.join(pods_root, 'Headers', 'Private', 'grpc')
    gRPC_modulemap_dest = File.join(grpc_headers_dir, 'gRPC-Core.modulemap')
    
    if File.exist?(gRPC_modulemap_source)
      FileUtils.mkdir_p(grpc_headers_dir)
      # Only copy if destination doesn't exist
      unless File.exist?(gRPC_modulemap_dest)
        FileUtils.cp(gRPC_modulemap_source, gRPC_modulemap_dest)
        puts "✓ Fixed gRPC-Core module map location: #{gRPC_modulemap_dest}"
      else
        puts "✓ gRPC-Core module map already exists: #{gRPC_modulemap_dest}"
      end
    else
      puts "⚠ Warning: gRPC-Core.modulemap source not found at #{gRPC_modulemap_source}"
    end
    
    # Note: With use_frameworks! :linkage => :static, Swift bridging headers
    # are generated automatically during the build process by Xcode.
    # We don't need to create a placeholder - the actual header will be generated.
  end
end
